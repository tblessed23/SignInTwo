<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/label_audio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="Title" />

        <TextView
            android:id="@+id/audio_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_gap"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:layout_below="@id/label_audio_title"
            android:ellipsize="end"
            android:maxLines="4" />

        <View style="@style/Divider"/>

        <TextView
            android:id="@+id/label_city_of_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_title"
            android:textColor="@color/textColor"
            android:text="City" />

        <TextView
            android:id="@+id/city_of_story"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:layout_below="@id/label_city_of_story"
            android:textColor="#6000"
            android:maxLines="2"
            android:ellipsize="end" />

        <View style="@style/Divider"/>

        <TextView
            android:id="@+id/label_county_of_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_of_story"
            android:textColor="@color/textColor"
            android:text="County" />

        <TextView
            android:id="@+id/county_of_story"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:textColor="#6000"
            android:layout_below="@id/label_county_of_story"
            android:maxLines="2"
            android:ellipsize="end" />


        <TextView
            android:id="@+id/label_state_of_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/county_of_story"
            android:textColor="@color/textColor"
            android:text="State" />

        <TextView
            android:id="@+id/state_of_story"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:layout_below="@id/label_state_of_story"
            android:textColor="#6000"
            android:maxLines="2"
            android:ellipsize="end" />







        <View style="@style/Divider"/>




        <!-- TextView that displays the update date -->
        <!--        <TextView-->
        <!--            android:id="@+id/taskUpdatedAt"-->
        <!--            style="@style/TextAppearance.AppCompat.Small"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/audioUrl"-->
        <!--            android:textColor="@android:color/primary_text_light"-->
        <!--            tools:text="11/11/1111" />-->

        <Button
            android:id="@+id/edit_saved_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/state_of_story"
            android:minWidth="64dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/orange_a700"
            android:textColor="@color/white"
            android:text="@string/editsavedaudio"/>




        <!--View for Menu Items-->
        <TextView
            android:id="@+id/menuTextMenuView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

